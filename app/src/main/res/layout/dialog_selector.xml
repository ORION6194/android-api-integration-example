<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/edt_white">

    <ImageView
        android:id="@+id/img_title_background"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/img_title_background"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/img_title_background"
        android:gravity="center"
        android:text="Select"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_title_background"
        android:background="@android:color/white"
        android:hint="Enter text to search"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:textSize="16dp">

    </EditText>

    <ListView
        android:id="@+id/lv_selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_selector"
        android:background="@color/white" />

    <TextView
        android:id="@+id/txt_no_records"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_selector"
        android:gravity="center"
        android:padding="5dp"
        android:text="No Search Record"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:visibility="gone" />

</RelativeLayout>